<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD NodeJS</title>
  <link rel="icon" href="/images/inter-snake.png" sizes="128x128" type="image/gif/png">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>
<body>
  <div class="container-fluid">
    <div class="wrapper-alert-home mt-5 mb-5">
      
    </div>    
    <div class="wrapper-table mt-5 mb-5">
      <div class="form-inline wrapper-judul-tabel">
        <button type="button" name="btnForm" id="btnForm" class="btn btn-primary mb-2 w-10">
          <i class="fa fa-user-plus"></i>
          NEW
        </button>
        <div class="wrapper-search ml-lg-5">
          <label class="sr-only" for="label-username">Username</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend">
              <div class="input-group-text">@</div>
            </div>
            <input type="text" class="form-control search" id="search" name="search" placeholder="Search Username">
          </div>                  
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-data">
          <caption class="caption">List All of User Registered</caption>
          <thead>
            <tr>
              <th scope="col" class="text-center">#</th>
              <th scope="col" class="text-center">Username</th>
              <th scope="col" class="text-center">Password</th>
              <th scope="col" class="text-center">Email</th>
              <th scope="col" class="text-center">Address</th>
              <th scope="col" class="text-center">Age</th>
              <th scope="col" class="text-center">Action</th>
            </tr>            
          </thead>
          <tbody class="table-body">

          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
<script type="text/javascript">
  displayAll()

  let wrapperAlert = document.querySelector('.wrapper-alert-home');

  function displayAll() {
    fetch('/list_all', {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json'
      },
    })
    .then(function (response) {
      return response.json()
    })
    .then(function (result) {
      // console.log(result)

      let tableBody = document.querySelector('.table-body');
      for (let i = 0; i < result.result.length; i++) {
        data = result.result[i];
        tableBody.innerHTML += `
          <tr>
            <td scope="col" class="text-center">${ i+1 }</td>
            <td scope="col" class="text-center">${ result.result[i].username }</td>
            <td scope="col" class="text-center">${ result.result[i].password }</td>
            <td scope="col" class="text-center">${ result.result[i].email }</td>
            <td scope="col" class="text-center">${ result.result[i].address }</td>
            <td scope="col" class="text-center">${ result.result[i].age }</td>
            <td scope="col" class="text-center">
              <a class="btn btn-outline-warning btn-sm" href="/find/${ result.result[i]._id }" role="button"><i class="fa fa-pencil"></i></a>
              <button id="${ result.result[i]._id }" onclick="deleteUser(this.id)" class="btn btn-outline-danger btn-sm""><i class="fa fa-trash"></i></button>
            </td>
          </tr>        
        `;

        wrapperAlert.innerHTML = `
          <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>${ result.message }!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>         
        `;
      }
    })
    .catch(function (error) {
      console.log(error)
    })
  }

  function deleteUser(params) {
    fetch('/remove/'+params)
    .then(function (response) {
      return response.json();
    })
    .then(function (result) {
      console.log(result)
      wrapperAlert.innerHTML = `
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>${ result.message }!</strong> Data Dengan ID ${ result.result } terhapus. Refresh Halaman Untuk Mendapatkan Data Terkini
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      `;      
    })
    .catch(function(error) {
      console.log(error)
    })
  }

  let txtSearch = document.querySelector('#search')
  txtSearch.addEventListener('keyup', function(event){
    if (event.keyCode === 13) {
      fetch('/search/'+txtSearch.value, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(function (response) {
        return response.json();
      })
      .then(function (result) {
        console.log(result);
        if(result.message == "Success To Fetch Data" && (result.result != "" )) {
          wrapperAlert.innerHTML = `
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <p class="text-left"><b>${ result.message }!</b> Terdapat Data Sebagai Berikut:</p>
              <div class="wrapper-data">
                <p class="text-left"> Username: ${ result.result.username }</p>
                <p class="text-left"> Password: ${ result.result.password }</p>
                <p class="text-left"> Email: ${ result.result.email }</p>
                <p class="text-left"> Age: ${ result.result.age }</p>
                <p class="text-left"> Address: ${ result.result.address }</p>
              </div>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          `;                
        } else {
          wrapperAlert.innerHTML = `
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <strong>Ooppss!</strong> Tidak Ada Data Dengan Username : ${ txtSearch.value }
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          `;         
        }
      })
      .catch(function (error){
        console.log(error);
      })
    }
  })

  let btnForm = document.querySelector('#btnForm');
  btnForm.addEventListener('click', function(event) {
    location.href = "http://localhost:9701/form"
  })
</script>
