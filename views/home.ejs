  /* async await implementation to fetch data from callback fetch */
  async function getDataTables() {
    const response = await fetch('/list_all', {method: 'GET', headers: {'Content-Type': 'application/json'}})
    // error handling - throw ke catch error
    if (!response.ok) {
      const message = `An error has occured: ${response.status} & Text : ${response.statusText}`;
      throw new Error(message);
    }
    const datax = await response.json();

    console.log("Dari Async Func: ", response)
    console.log("Dari Async Func: ", datax);

    return datax;
  }  

  getDataTables().then(function (datax) {
    console.log("Dari Callback Func: ", datax);    
    for (let i = 0; i < datax.result.length; i++) {
      wrapperAlert.innerHTML = `
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          <strong>${ datax.message }!</strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>         
      `;

      tableBody.innerHTML += `
        <tr>
          <td scope="col" class="text-center">${ i+1 }</td>
          <td scope="col" class="text-center">${ datax.result[i].username }</td>
